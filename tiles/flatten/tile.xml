<?xml version="1.0" encoding="UTF-8"?>
<project>
    <properties>
        <!-- Flatten -->
        <flatten.mode/>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>flatten-maven-plugin</artifactId>
                <version>1.0.1</version>
                <configuration>
                    <pomElements>
                        <name/>
                        <description/>
                        <developers/>
                        <url/>
                        <scm/>
                        <issueManagement/>
                        <ciManagement/>
                    </pomElements>
                    <flattenMode>${flatten.mode}</flattenMode>
                    <updatePomFile>true</updatePomFile>
                </configuration>
                <executions>
                    <!-- enable flattening -->
                    <execution>
                        <id>flatten</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>flatten</goal>
                        </goals>
                    </execution>
                    <!-- ensure proper cleanup -->
                    <execution>
                        <id>flatten.clean</id>
                        <phase>clean</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>